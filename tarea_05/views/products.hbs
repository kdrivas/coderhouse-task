<h1>Products</h1>
<form action="/api/productos" method="POST" enctype="application/x-www-form-urlencoded">
  <div>
    <label>Title</label>
    <input type="text" name="title" />
  </div>
  <div>
    <label>Price</label>
    <input type="text" name="price" />
  </div>
  <div>
    <label>Thumbnail</label>
    <input type="text" name="thumbnail" />
  </div>
  <input type="submit" value="Subir producto" />
</form>
<table class="table">
  <thead>
    <th scope="col">Title</th>
    <th scope="col">Price</th>
    <th scope="col">Thumbnail</th>
  </thead>
  {{#each products}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.price}}</td>
      <td>{{this.thumbnail}}</td>
    </tr>
  {{/each}}
</table>